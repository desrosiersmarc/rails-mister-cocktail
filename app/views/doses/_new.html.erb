<div class="container">
  <hr>
  <%= simple_form_for [cocktail, dose] do |f| %>
  <%= f.error_notification %>
  <% if @dose.errors.any? %>
    <%= @dose.errors.full_messages.join(" ") %>
  <% end %>

  <%= f.association :ingredient %>
  <%= f.input :description %>

  <%= f.button :submit, 'Add an ingredient', class:"btn btn-warning btn-block" %>
  <% end %>
</div>
